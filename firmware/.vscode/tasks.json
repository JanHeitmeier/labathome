{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello",
            "problemMatcher": []
        },
        {
            "label": "idf build",
            "type": "shell",
            "command": "C:/opt/esp-idf/export.ps1;idf",
            "args": ["build"],
            "problemMatcher": {
                "base": "$gcc",
                "applyTo": "allDocuments",
                "fileLocation": ["relative", "${workspaceFolder}/build"]
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            
        }
    ]
}