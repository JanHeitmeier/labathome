{
//https://laptrinhx.com/a-guide-example-project-for-jtag-debugging-on-the-esp32-with-vs-code-using-openocd-659757494/
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "launch",
            "name": "laptrinhx.com Debug",
            "target": "./build//labathome_firmware.elf",
            "cwd": "C:/repos/labathome/firmware",
            "gdbpath": "C:/opt/espressif/tools/xtensa-esp32-elf/esp-2020r2-8.2.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb.exe",
            "autorun": 
            [
                "target remote :3333",
                "mon reset halt",
                "flushregs",
                "thb app_main",
                "c"
            ]
        }
    ]
}